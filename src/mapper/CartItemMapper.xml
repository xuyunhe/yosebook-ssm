<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tyust.dao.CartItemDao" >
  <resultMap id="CartItemResultMap" type="com.tyust.entity.CartItem" >
    <id column="cartItemId" property="cartItemId" jdbcType="VARCHAR" />
    <result column="quantity" property="quantity" jdbcType="INTEGER" />
    <association property="book" column="bid" select="com.tyust.dao.BookDao.findByBid"/>
    <association property="user" column="uid" javaType="com.tyust.entity.User">
    	<result column="uid" property="uid"/>
    </association>
  </resultMap>
  
  <select id="findByUser" parameterType="string" resultMap="CartItemResultMap">
  	select 
  		* 
  	from 
  		t_cartitem c,t_book b 
  	where 
  		c.bid=b.bid and c.uid=#{uid}
  	order by 
  		c.orderBy
  </select>
  
  <insert id="addCartItem" parameterType="map">
  	insert into 
  		t_cartitem 
  		(
  		cartItemId,
  		quantity,
  		bid,
  		uid
  		)
	values 
		(
		#{cartItemId},
		#{quantity},
		#{bid},
		#{uid}
		)
  </insert>
  
  <update id="updateQuantity" parameterType="map">
  	update 
  		t_cartitem 
  	set 
  		quantity=#{quantity}
  	where 
  		cartItemId=#{cartItemId}
  </update>
  
  <select id="findByUidAndBid" parameterType="map" resultMap="CartItemResultMap">
  	select 
  		* 
  	from 
  		t_cartitem 
  	where 
  		uid=#{uid} and bid=#{bid}
  </select>
  
  <delete id="bacthDelete" parameterType="map">
  	delete from 
  		t_cartitem 
  	where 
  		cartItemId in
  	<foreach collection="array" item="cartItemId"
		open="(" separator="," close=")">
			#{cartItemId}
	</foreach>
  </delete>
  
  <select id="findByCartItemId" parameterType="string" resultMap="CartItemResultMap">
  	select 
  		* 
  	from 
  		t_cartitem c,t_book b 
  	where 
  		c.bid=b.bid and c.cartItemId=#{cartItemId}
  </select>
  
  <select id="loadCartItems" resultMap="CartItemResultMap">
  	select 
  		* 
  	from 
  		t_cartitem c,t_book b 
  	where 
  		b.bid=c.bid and cartItemId in
  	<foreach collection="array" item="cartItemId"
		open="(" separator="," close=")">
			#{cartItemId}
	</foreach>
  </select>
  
</mapper>