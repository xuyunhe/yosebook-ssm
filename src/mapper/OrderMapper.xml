<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tyust.dao.OrderDao">
  <resultMap id="OrderResultMap" type="com.tyust.entity.Order" >
    <id column="oid" property="oid" jdbcType="CHAR" />
    <result column="ordertime" property="ordertime" jdbcType="CHAR" />
    <result column="total" property="total" jdbcType="DECIMAL" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="address" property="address" jdbcType="VARCHAR" />
    <association property="owner" column="uid" javaType="com.tyust.entity.User">
    	<result property="uid" column="uid"/>
    </association>
    <collection property="orderItemList" column="oid" select="com.tyust.dao.OrderItemDao.findByOid"/>
  </resultMap>
	
  <sql id="select_*_sql">
  	select
  		oid,
  		ordertime,
  		total,
  		status,
  		address,
  		uid
	from
		t_order
  </sql>
  
  <sql id="where_sql">
  	<where>
  		<trim suffixOverrides="and">
	  		<choose>
	  			<when test="oid!=null">
	  				oid=#{oid}
	  			</when>
	  			<when test="status!=null">
	  				status=#{status}
	  			</when>
	  			<when test="uid!=null">
	  				uid=#{uid}
	  			</when>
	  		</choose>
  		</trim>
  	</where>
  </sql>
  
  <sql id="order_limit_sql">
  	order by 
	  		ordertime desc
	<if test="ps!=null">
		<if test="start!=null">
	  	limit #{start},#{ps}
	  	</if>
	 </if>
  </sql>
  
  <select id="findStatus" parameterType="string" resultType="Integer">
  	select 
  		status 
  	from 
  		t_order 
  	where
  		oid=#{oid}
  </select>
  
  <update id="updateStatus" parameterType="map">
  	update 
  		t_order 
  	set 
  		status=#{status}
  	<include refid="where_sql"/>
  </update>
  
  <select id="load" parameterType="string" resultMap="OrderResultMap">
  	<include refid="select_*_sql"/>
  	where
  		oid=#{oid}
  </select>
  
  <insert id="add" parameterType="map">
  	insert into 
  		t_order
  		(
  		oid,
  		ordertime,
  		total,
  		status,
  		address,
  		uid
  		)
  	values 
  		(
  		#{oid},
  		#{ordertime},
  		#{total},
  		#{status},
  		#{address},
  		#{uid}
  		)
  </insert>
  
  <select id="findByStatus" parameterType="map" resultMap="OrderResultMap">
  	<include refid="select_*_sql"/>
  	<include refid="where_sql"/>
  	<include refid="order_limit_sql"/>
  </select>
  
  <select id="findByUser" parameterType="map" resultMap="OrderResultMap">
  	<include refid="select_*_sql"/>
  	<include refid="where_sql"/>
  	<include refid="order_limit_sql"/>
  </select>
  
  <select id="findAll" parameterType="map" resultMap="OrderResultMap">
  	<include  refid="select_*_sql"/>
  	<include refid="order_limit_sql"/>
  </select>
  
  <select id="findOrderTr" parameterType="map" resultType="Integer">
  	select 
  		count(*) 
  	from 
  		t_order
  	<include refid="where_sql"/>
  </select>
  
</mapper>